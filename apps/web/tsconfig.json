{
  "extends": "astro/tsconfigs/strict",
  "include": [
    ".astro/types.d.ts",
    "**/*"
  ],
  "exclude": [
    "dist"
  ],
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    // Restrict global type packages to avoid duplicate implicit libs like "node 2" / "trusted-types 2"
    "types": ["vite/client", "node", "trusted-types"]
  }
}
